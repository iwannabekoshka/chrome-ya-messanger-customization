{
  "manifest_version": 2,
  "name": "Ya Messenger customization",
  "version": "1.0",
  "description": "Добавь красок Яндекс Мессенджеру :)",
  "content_scripts": [
    {
      "matches": [
        "https://yandex.ru/*"
      ],
      "js": [
        "src/main/main.js"
      ],
      "css": [
        "src/main/style.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "src/users-ui/dist/index.html"
  }
}