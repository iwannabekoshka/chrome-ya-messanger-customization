{
  "manifest_version": 2,
  "name": "Ya Messenger customization",
  "version": "1.0",
  "description": "Добавь красок к Яндекс Мессенджеру :)",
  "content_scripts": [
    {
      "matches": [
        "https://yandex.ru/*"
      ],
      "js": [
        "src/main.js"
      ],
      "css": [
        "src/style.css"
      ]
    }
  ],
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  }
}